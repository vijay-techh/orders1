{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/server.js",
      "type": "host"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1",
      "missing": [
        {
          "type": "file"
        }
      ],
      "type": "host"
    }
  ]
}
